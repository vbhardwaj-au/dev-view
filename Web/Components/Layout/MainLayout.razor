@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
    @if (!IsLoginOrSetupPage())
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main class="@(IsLoginOrSetupPage() ? "no-sidebar" : "")">
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>

<!-- Auth state handler to manage redirects based on authentication state -->
<AuthStateHandler />

<!-- Chart.js and committerCharts.js are loaded in App.razor -->

@code {
    private bool IsLoginOrSetupPage()
    {
        var uri = Navigation.Uri;
        return uri.Contains("/login", StringComparison.OrdinalIgnoreCase) ||
               uri.Contains("/setup", StringComparison.OrdinalIgnoreCase) ||
               uri.Contains("/process-auth", StringComparison.OrdinalIgnoreCase);
    }
}