        {
            url += "?" + string.Join("&", queryParams);
        }

        Navigation.NavigateTo(url);
    }

    private void SortContributors(string sortBy)
    {
        if (contributorSortBy == sortBy)
        {
            // Toggle direction if same column
            contributorSortDescending = !contributorSortDescending;
        }
        else
        {
            // New column, set to descending by default
            contributorSortBy = sortBy;
            contributorSortDescending = true;
        }
        StateHasChanged();
    }

    private IEnumerable<ContributorStats> GetSortedContributors()
    {
        if (dashboardData?.TopContributors == null)
            return Enumerable.Empty<ContributorStats>();

        var query = dashboardData.TopContributors.AsQueryable();

        switch (contributorSortBy)
        {
            case "user":
                query = contributorSortDescending 
                    ? query.OrderByDescending(c => c.UserName)
                    : query.OrderBy(c => c.UserName);
                break;
            case "commits":
                query = contributorSortDescending 
                    ? query.OrderByDescending(c => c.Commits)
                    : query.OrderBy(c => c.Commits);
                break;
            case "added":
                query = contributorSortDescending 
                    ? query.OrderByDescending(c => c.CodeLinesAdded)
                    : query.OrderBy(c => c.CodeLinesAdded);
                break;
            case "removed":
                query = contributorSortDescending 
                    ? query.OrderByDescending(c => c.CodeLinesRemoved)
                    : query.OrderBy(c => c.CodeLinesRemoved);
                break;
            case "net":
            default:
                query = contributorSortDescending 
                    ? query.OrderByDescending(c => c.CodeLinesAdded - c.CodeLinesRemoved)
                    : query.OrderBy(c => c.CodeLinesAdded - c.CodeLinesRemoved);
                break;
        }

        return query.ToList();
    }

