    {
        var teamId = value != null ? (int?)Convert.ToInt32(value) : null;
        selectedTeamId = teamId;
        // Don't load data - wait for Search button
    }

    private void HandleFilterTypeChanged(string newFilterType)
    {
        filterType = newFilterType;
        
        // Clear selections when switching between user and team
        if (filterType == "user")
        {
            selectedTeamId = null;
        }
        else if (filterType == "team")
        {
            selectedUserId = null;
        }
        
        // Don't load data - wait for Search button
        StateHasChanged();
    }

    private IEnumerable<TeamSummaryDto> GetTeamOptions()
    {
        var options = new List<TeamSummaryDto>();
        
        // Add "All Teams" option
        options.Add(new TeamSummaryDto { Name = "All Teams", Id = -1, MemberCount = 0, IsActive = true });
        
        // Add individual teams with formatted names
        if (teams != null)
        {
            foreach (var team in teams.Where(t => t.IsActive).OrderBy(t => t.Name))
            {
                // Create a copy with modified display name
                options.Add(new TeamSummaryDto 
                { 
                    Name = $"{team.Name} ({team.MemberCount} member{(team.MemberCount != 1 ? "s" : "")})", 
                    Id = team.Id,
                    MemberCount = team.MemberCount,
                    IsActive = team.IsActive
                });
            }
        }
        
        return options;
